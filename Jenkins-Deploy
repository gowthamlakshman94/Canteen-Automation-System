pipeline {
  agent {
    kubernetes {
      defaultContainer 'jnlp'
      yaml '''apiVersion: v1
kind: Pod
spec:
  containers:
  - name: kubectl
    image: bitnami/kubectl:latest
    command: ['sh','-c']
    args: ['sleep 999d']
    tty: true
  volumes:
    - name: workspace
      emptyDir: {}
'''
    }
  }

  stages {
    stage('Checkout') {
      steps {
        checkout([$class: 'GitSCM',
          branches: [[name: '*/main']],
          userRemoteConfigs: [[url: 'https://github.com/gowthamlakshman94/Canteen-Automation-System.git']]
        ])
      }
    }

    stage('Deploy to Kubernetes') {
      steps {
        withKubeConfig([credentialsId: 'k3s-config']) {
          container('kubectl') {
            sh '''
              #!/bin/sh
              set -euo pipefail

              echo "ğŸš€ Deploying Backend"
              kubectl apply -f backend-deployment.yaml
              kubectl rollout status deployment/canteen-be -n canteen-automation --timeout=120s || true

              echo "ğŸš€ Deploying Frontend"
              kubectl apply -f frontend-deployment.yaml
              kubectl rollout status deployment/canteen-fe -n canteen-automation --timeout=120s || true

              echo "ğŸ“Œ Current Pods:"
              kubectl get pods -n default -o wide || true
            '''
          }
        }
      }
    }
  }

  post {
    success {
      echo "âœ… Deploy completed."
    }
    failure {
      echo "âŒ Deploy failed â€” check the logs above."
    }
  }
}
