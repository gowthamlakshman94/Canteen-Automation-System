pipeline {
  agent {
    kubernetes {
      defaultContainer 'jnlp'
      yaml '''
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: kubectl
    image: bitnami/kubectl:latest
    command: ['sh','-c']
    args: ['sleep 999d']
    tty: true
  volumes:
  - name: workspace
    emptyDir: {}
'''
    }
  }

  stages {
    stage('Checkout') {
      steps {
        checkout([$class: 'GitSCM',
          branches: [[name: '*/main']],
          userRemoteConfigs: [[url: 'https://github.com/gowthamlakshman94/Canteen-Automation-System.git']]
        ])
      }
    }

    stage('Deploy to Kubernetes (using Jenkins file credential)') {
      steps {
        // NOTE: withCredentials must run inside the same container that will use the file.
        container('kubectl') {
          // 'k3s-config' must be stored in Jenkins as a Secret file (file credential)
          withCredentials([file(credentialsId: 'k3s-config', variable: 'KUBEFILE')]) {
            sh '''
              #!/bin/sh
              set -euo pipefail

              # Safe debug: show where the temporary kubeconfig file lives (do NOT print content)
              echo "Using kubefile at: ${KUBEFILE}"
              ls -la "$(dirname "${KUBEFILE}")" || true

              echo "üöÄ Deploying Backend"
              kubectl --kubeconfig="${KUBEFILE}" apply -f backend-deployment.yaml
              kubectl --kubeconfig="${KUBEFILE}" rollout status deployment/canteen-be -n canteen-automation --timeout=120s || true

              echo "üöÄ Deploying Frontend"
              kubectl --kubeconfig="${KUBEFILE}" apply -f frontend-deployment.yaml
              kubectl --kubeconfig="${KUBEFILE}" rollout status deployment/canteen-fe -n canteen-automation --timeout=120s || true

              echo "üìå Current Pods (namespace: canteen-automation):"
              kubectl --kubeconfig="${KUBEFILE}" get pods -n canteen-automation -o wide || true
            '''
          }
        }
      }
    }
  }

  post {
    success {
      echo "‚úÖ Deploy completed."
    }
    failure {
      echo "‚ùå Deploy failed ‚Äî check the logs above."
    }
  }
}
